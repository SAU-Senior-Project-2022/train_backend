{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Server main http",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "args": ["--debug", "--http"],
            "console": "integratedTerminal"
        },
        {
            "name": "Launch Server main https",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "args": ["--debug"],
            "console": "integratedTerminal"
        },
        {
            "name": "Launch Current Python File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        }
    ]
}